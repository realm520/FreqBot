{
  "dashboard": {
    "id": null,
    "title": "FreqBot 网格策略监控面板",
    "tags": ["freqbot", "grid-strategy", "trading"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "网格策略概览",
        "type": "stat",
        "targets": [
          {
            "expr": "grid_total_levels_EnhancedGridStrategy",
            "legendFormat": "总网格层级"
          },
          {
            "expr": "grid_active_levels_EnhancedGridStrategy", 
            "legendFormat": "活跃层级"
          },
          {
            "expr": "grid_filled_levels_EnhancedGridStrategy",
            "legendFormat": "已成交层级"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 15}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal"
        }
      },
      {
        "id": 2,
        "title": "网格成交率",
        "type": "gauge",
        "targets": [
          {
            "expr": "grid_fill_rate_EnhancedGridStrategy",
            "legendFormat": "成交率 %"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 60}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 3,
        "title": "交易统计",
        "type": "timeseries",
        "targets": [
          {
            "expr": "grid_trades_total_EnhancedGridStrategy",
            "legendFormat": "总交易数"
          },
          {
            "expr": "grid_profitable_trades_EnhancedGridStrategy",
            "legendFormat": "盈利交易"
          },
          {
            "expr": "grid_loss_trades_EnhancedGridStrategy", 
            "legendFormat": "亏损交易"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 4,
        "title": "胜率 & 平均收益",
        "type": "stat",
        "targets": [
          {
            "expr": "grid_win_rate_EnhancedGridStrategy",
            "legendFormat": "胜率"
          },
          {
            "expr": "grid_avg_trade_profit_EnhancedGridStrategy * 100",
            "legendFormat": "平均收益率"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 40},
                {"color": "green", "value": 60}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "title": "仓位管理",
        "type": "timeseries",
        "targets": [
          {
            "expr": "position_current_size_EnhancedGridStrategy",
            "legendFormat": "当前仓位"
          },
          {
            "expr": "position_max_size_EnhancedGridStrategy",
            "legendFormat": "最大仓位"
          },
          {
            "expr": "position_utilization_EnhancedGridStrategy",
            "legendFormat": "仓位利用率 %"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "仓位利用率 %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "风险指标",
        "type": "timeseries", 
        "targets": [
          {
            "expr": "max_drawdown_EnhancedGridStrategy",
            "legendFormat": "最大回撤 %"
          },
          {
            "expr": "current_drawdown_EnhancedGridStrategy",
            "legendFormat": "当前回撤 %"
          },
          {
            "expr": "total_return_EnhancedGridStrategy",
            "legendFormat": "总收益率 %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*回撤.*"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*收益.*"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            }
          ]
        },
        "alert": {
          "conditions": [
            {
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "10s",
          "handler": 1,
          "name": "高回撤警报",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "性能指标",
        "type": "stat",
        "targets": [
          {
            "expr": "sharpe_ratio_EnhancedGridStrategy",
            "legendFormat": "夏普比率"
          },
          {
            "expr": "profit_factor_EnhancedGridStrategy", 
            "legendFormat": "盈亏比"
          },
          {
            "expr": "stop_loss_triggers_EnhancedGridStrategy",
            "legendFormat": "止损触发次数"
          },
          {
            "expr": "grid_efficiency_EnhancedGridStrategy",
            "legendFormat": "网格效率 %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 1.0}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*效率.*"},
              "properties": [
                {"id": "unit", "value": "percent"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*次数.*"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "decimals", "value": 0},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "green", "value": 0},
                    {"color": "yellow", "value": 5},
                    {"color": "red", "value": 10}
                  ]
                }}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "市场状态指标",
        "type": "table",
        "targets": [
          {
            "expr": "label_replace(market_regime_EnhancedGridStrategy, \"status\", \"$1\", \"__name__\", \".*\")",
            "legendFormat": "市场状态",
            "format": "table"
          },
          {
            "expr": "label_replace(volatility_level_EnhancedGridStrategy, \"level\", \"$1\", \"__name__\", \".*\")",
            "legendFormat": "波动率水平", 
            "format": "table"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 30},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "align": "center"
            }
          }
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "Value": true},
              "indexByName": {}
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "实时网格层级分布",
        "type": "bargauge",
        "targets": [
          {
            "expr": "grid_active_levels_EnhancedGridStrategy",
            "legendFormat": "活跃买入层级"
          },
          {
            "expr": "grid_filled_levels_EnhancedGridStrategy", 
            "legendFormat": "已成交层级"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "max": 20,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 8},
                {"color": "red", "value": 15}
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 10,
        "title": "交易频率 (每小时)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(grid_trades_total_EnhancedGridStrategy[1h])",
            "legendFormat": "交易频率"
          },
          {
            "expr": "rate(position_adjustments_EnhancedGridStrategy[1h])",
            "legendFormat": "仓位调整频率"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "strategy",
          "type": "query",
          "query": "label_values(grid_total_levels, strategy)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "pair",
          "type": "query", 
          "query": "label_values(grid_total_levels{strategy=~\"$strategy\"}, pair)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "止损事件",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(stop_loss_triggers_EnhancedGridStrategy[5m]) > 0",
          "iconColor": "red",
          "textFormat": "止损触发"
        },
        {
          "name": "仓位调整", 
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(position_adjustments_EnhancedGridStrategy[5m]) > 0",
          "iconColor": "blue", 
          "textFormat": "仓位调整"
        }
      ]
    },
    "links": [
      {
        "title": "FreqBot 主控制台",
        "url": "/freqbot",
        "type": "link"
      },
      {
        "title": "策略配置",
        "url": "/freqbot/strategies", 
        "type": "link"
      }
    ]
  }
}